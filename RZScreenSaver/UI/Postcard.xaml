<UserControl x:Class="RZScreenSaver.UI.Postcard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Border BorderThickness="10" BorderBrush="WhiteSmoke" RenderTransformOrigin="0.5,0.5">
        <Border.Effect>
            <DropShadowEffect x:Name="shadow"  ShadowDepth="10" Opacity="0.5" />
        </Border.Effect>
        <Border.RenderTransform>
            <RotateTransform x:Name="cardRotator" />
        </Border.RenderTransform>
        <Image Name="picture" Source="/RZScreenSaver;component/images/Clipping Text.png"></Image>
    </Border>
</UserControl>

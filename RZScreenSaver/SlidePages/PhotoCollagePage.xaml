<rzp:SlidePage x:Class="RZScreenSaver.SlidePages.PhotoCollagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rzp="clr-namespace:RZScreenSaver.SlidePages"
    xmlns:rzui="clr-namespace:RZScreenSaver.UI"
    Title="PhotoCollagePage" Background="Black">
    <Canvas>
        <Image Name="pageSurface" />
        <Label Name="imagePathText" Foreground="Lime" VerticalAlignment="Bottom" Visibility="Collapsed" Panel.ZIndex="10" />
        <Canvas Panel.ZIndex="5">
            <rzui:Postcard x:Name="postcard" Opacity="0" />
        </Canvas>
    </Canvas>
</rzp:SlidePage>

<rzp:SlidePage x:Class="RZScreenSaver.SlidePages.SimpleSlide"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rzp="clr-namespace:RZScreenSaver.SlidePages"
    Title="SimpleSlide">
    <Grid>
        <Image Name="slideShowImage" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="imageOrientation" Angle="0" />
            </Image.RenderTransform>
        </Image>
        <Label Name="imagePathText" Foreground="Lime" VerticalAlignment="Bottom" Visibility="Collapsed" />
    </Grid>
</rzp:SlidePage>